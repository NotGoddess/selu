{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    'usa-hero',
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}

      {% if uswds_grid_class %}
      <div class="{{ uswds_grid_class }}">
      {% endif %}

      {% if paragraph.field_uswds_title.value %}
      <div class="usa-hero__callout usa-section-dark">
        <h1 class="usa-hero__heading"><span class="usa-hero__heading--alt">{{ paragraph.field_uswds_hero_heading_alt.value }}</span>{{ paragraph.field_uswds_title.value }}</h1>
        {{ content.field_uswds_hero_text }}
        {{ content.field_uswds_link }}
        {{ content.field_uswds_button }}
      </div>
      {% endif %}

      {% if uswds_grid_class %}
      </div>
      {% endif %}

    {% endblock %}
  </div>
{% endblock paragraph %}
